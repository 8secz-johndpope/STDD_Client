<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layoutEmaDialogContainer"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/ema_alertdialog_background">

    <TextView
        android:id="@+id/emaAlertTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/ema_alertdialog_title_background"
        android:padding="10dp"
        android:text="@string/ema_title"
        android:textColor="@color/colorWhite"
        android:textSize="18sp"
        android:textStyle="bold"
        />

    <TextView
        android:id="@+id/emaAlertMessage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="18dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="20dp"
        android:text="@string/ema_message"
        android:textColor="@color/colorTextPrimary"
        android:textSize="16sp"
        android:layout_below="@+id/emaAlertTitle"
        android:layout_alignParentStart="true"
        />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@+id/emaAlertMessage">


    <Button
        android:id="@+id/emaAlertButtonCancel"
        android:layout_width="0dp"
        android:layout_weight="0.02"
        android:layout_height="40dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="10dp"
        android:background="@drawable/button_ema_cancel_background"
        android:text="@string/cancel"
        android:textColor="@color/colorWhite"
        android:textSize="14sp"
        android:layout_marginBottom="10dp" />

    <Button
        android:id="@+id/emaAlertButtonAnswer"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:layout_weight="0.02"
        android:layout_marginStart="10dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/button_ema_answer_background"
        android:text="@string/answer"
        android:textColor="@color/colorWhite"
        android:textSize="14sp"
        />

    </LinearLayout>

</RelativeLayout>